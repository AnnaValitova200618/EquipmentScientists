<Window x:Class="Equipment_Client.Views.EditEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Equipment_Client.Views"
        mc:Ignorable="d"
        x:Name="window"
        Title="EditEquipment" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFC1F7FD">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Название оборудования" FontWeight="Bold"/>
            <TextBox Text="{Binding Equipment.Name}" FontSize="14"/>
            <Label Content="Тип оборудования" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Types}"
                      SelectedItem="{Binding SelectType}"
                      DisplayMemberPath="Title" FontSize="14"/>
            <Label Content="Ответственный за оборудование" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Scientists}"
                      SelectedItem="{Binding SelectScientist}"
                      DisplayMemberPath="Lastname" FontSize="14"/>
            <Label Content="Габариты" FontWeight="Bold"/>
            <TextBox Text="{Binding Equipment.Dimansions}" FontSize="14"/>
            <Label Content="Вес (кг)" FontWeight="Bold"/>
            <TextBox Text="{Binding Equipment.Weight}" FontSize="14"/>
            
        </StackPanel>
        <Button Command="{Binding Save}" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Сохранить"/>
    </Grid>
</Window>
